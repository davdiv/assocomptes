var countries = require("./countriesList");

# template displayCountry(data)
    {let name = countries[data]}
    {if !name}
        <span class="glyphicon glyphicon-exclamation-sign" title="Pays inconnu"></span> {data}
    {else}
        <span class="img-sm-flag" style="background-image:url(/statics-dev/images/flags/{data}.png)"></span> {name}
    {/if}
# /template

module.exports = displayCountry;